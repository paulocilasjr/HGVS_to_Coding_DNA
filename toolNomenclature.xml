<tool id="fa_gc_content_1" name="cNomenclature generator"  version="0.1.0">
    <description>Standard mutation nomenclature generator based on a coding DNA seq
        generated from p.nomenclature and cDNA sequence.</description>
    <command>python3 '${__tool_directory__}/c_nomenclature_tool.py' 'cDNA.txt' 'codons.txt' 'aachange.txt' 
        'outputfile.txt'</command>
    <inputs>
        <param format='txt' name='cDNA' type='data' label='cDNA sequence'/>
        <param format='txt' name='codons' type='data' label='codon number localization'/>
        <param format='txt' name='aachange' type='data' label='amino acid change (one letter)'/>
    </inputs>
    <outputs>
        <data format='txt' name='output' />
    </outputs>

    <tests>
        <test>
            <param name='cDNA' value="fa_gc_content_input_cDNA.txt" />
            <param name='codons' value="fa_gc_content_input_codons.txt" />
            <param name='aachange' value="fa_gc_content_input_aachange.txt" />
            <output name='out_file1' file="fa_gc_content_output.txt" />
        </test>
    </tests>

    <help>
        This tool computes the aminoacid change from p. nomencature to c. nomenclature.
    </help>
</tool>

